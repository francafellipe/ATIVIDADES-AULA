idade_anos = (int(input('Quantidade de anos :')))
idade_meses = (int(input('Quantidade de meses :')))
idade_dias = (int(input('Quantidade de dias :')))
dias_em_anos = idade_anos*360
dias_em_meses = idade_meses * 30 
total_dias = dias_em_anos+dias_em_meses+idade_dias
